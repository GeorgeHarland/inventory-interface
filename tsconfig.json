{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 18",

  "_version": "18.2.0",

  "compilerOptions": {
    "lib": ["dom", "es6", "dom.iterable", "scripthost"],
    "module": "es6",
    "target": "es2022",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "*.js"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
